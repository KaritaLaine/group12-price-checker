{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "sourceMap": true
  },
  "exclude": ["test", "node_modules"],
  "include": ["src/**/*"]
}
