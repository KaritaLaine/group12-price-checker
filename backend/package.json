{
  "name": "backend",
  "version": "1.0.0",
  "description": "Group 12's software architecture course project: a backend for a price checker software system.",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "seed": "tsx script/seed.ts",
    "docs:generate": "redocly build-docs src/config/swagger.yaml -o docs/api/api-documentation.html",
    "docs:md": "node node_modules/widdershins/widdershins.js --search false --language_tabs 'javascript:JavaScript' 'python:Python' --summary src/config/swagger.yaml -o docs/api/api-reference.md",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.2",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^4.0.15",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "widdershins": "^4.0.1"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "swagger-ui-express": "^5.0.1"
  }
}
